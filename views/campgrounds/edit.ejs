<%include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1 class="text-center">Edit <%= campground.name %></h1>
      <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input type="text" name="campground[name]" value="<%=campground.name%>" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control">
          </div>
          <div class="form-group">
            <input type="number" name="campground[price]" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
          </div>
          <div class="actions">
            <button type="submit" class="btn btn-success btn-block">Update</button>
          </div>
      </form>
      <a style="text-align:center" href="/campgrounds"><span class="text-center glyphicon glyphicon-chevron-left"></span>Go Back</a>

    </div>
  </div>
<%include ../partials/footer %>
