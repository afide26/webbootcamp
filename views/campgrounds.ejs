<!-- Header Partial -->
<% include partials/header %>
<!-- End of Header Partial -->
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 class="text-center">Welcome to YelpCamp</h1>
      <p class="text-center">View our handmade campgrounds from around the world.</p>
      <p class="text-center"><a href="/campgrounds/new" class="btn btn-success btn-sm">Add A New Campground</a></p>
    </div>
  </header>
  <div id="campgrounds" class="row text-center" style="display: flex; flex-wrap:wrap">
    <% campgrounds.forEach(function(campground){%>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>" alt="<%= campground.name%>"/>
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>
        </div>
    </div>
    <%}); %>
  </div>
</div>


